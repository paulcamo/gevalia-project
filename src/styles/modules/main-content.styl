// -------------- GENERAL STYLES ----------- //

.header__gevalia
    font-size 3.9em
    line-height 1em
    width auto
    padding-bottom .75em
    padding-top 1.9em
    position relative
    font-family $font-primary
    +for_breakpoint(tablet)
        font-size 2.9em
        padding-top 2em
    +for_breakpoint(mobile)
        font-size 1.9em
    &:after
        border-bottom 4px solid
        bottom 0
        content ''
        left 0
        position absolute
        width .7em
    .black
        font-family $font-secondary
    
.gevalia__detail__text
    margin-left 18.5em
    margin-top 2.8em
    width 60%
    +for_breakpoint(tablet)
        margin-left 8.5em
        width 81%
    +for_breakpoint(mobile)
        width 100%
        margin-left 0
        margin-top 1em
    
.gevalia__section__content
    padding-bottom 1em
    line-height 1.45em
    font-size .8em
    font-family $font-text 
    .black
        font-family $font-secondary
    
.gevalia__section__content__large
    font-size 1em
    padding-bottom 1em
    line-height 1.45em
    font-family $font-text 
    .black
        font-family $font-secondary
        
.gevalia__list__info  
    padding-bottom 1em
    line-height 1.45em
    font-size .8em
    padding-left 12px
    position relative
    font-family $font-text 
    &:before
        content 'â€¢'
        position absolute
        left 2px
    
.content
    padding-top 66px
    
.internal__gevalia__info
    overflow hidden
    padding 0
    width 100%
    position relative
    display block
    
.panel__detail
    width 990px
    margin auto
    position relative
    +for_breakpoint(tablet)
        width 94%
        padding 0 24px
    +for_breakpoint(mobile)
        width 85%
        padding 0 24px

.subtitle__img
    position absolute
    right 0
    top -115px
    +for_breakpoint(tablet)
        width 200px
        right 23px
    +for_breakpoint(mobile)
        right 25%
        top -120px
        width 180px

.gevalia__initiative
    height 745px
    background url("../img/coffe-background.svg") repeat $saddle
    
.program__gevalia__division
    height 737px
    background url("../img/The-Gevalia-Sustainability.jpg") no-repeat transparent
    background-size cover 
    +for_breakpoint(mobile)
        height 600px

.education__gevalia__division
    height 763px
    background url("../img/panel-flower.svg") repeat $blue

.gevalia__small__image
    height 281px
    
.gevalia__info__division
    height 652px

.gevalia__assistance
    .gevalia__small__image
        background url("../img/The-Gevalia-Sustainability-Job.jpg") repeat transparent 0px
        background-size cover
    .gevalia__info__division
        background url("../img/panel-arrows.svg") repeat transparent
    
.gevalia__job
    .gevalia__small__image
        background url("../img/The-Gevalia-Sustainability-coffee.jpg") repeat $saddle 0px
        background-size cover
    .gevalia__info__division
        background url("../img/coffe-background.svg") repeat $saddle
        
.gevalia__experience
    .gevalia__small__image
        background url("../img/The-Gevalia-Sustainability-experience.jpg") repeat transparent 0px
        background-size cover
.gevalia__info__division__subfooter
    height 248px
    background url("../img/panel-flower.svg") repeat $blue
    
// -------------- SECTION STYLES ----------- //

.gevalia__initiative
    .header__gevalia
        color $casablanca
        
    .gevalia__detail__text > p
        color $casablanca
        padding-bottom 1em
        line-height 1.45em
        font-size .8em
        +for_breakpoint(mobile)
            font-size .7em
        
.cta__section__gevalia
    color $casablanca
    border 1px solid $casablanca
    position relative
    padding 0.5em 2em 0.5em 0.5em
    margin-top .75em
    display inline-block
    font-family $font-text 
    transition all .2s ease-out
    &:hover
        background rgba(252,194,75,0.4)
        color $white
    &:after
        content ''
        position absolute
        background url("../img/arrow-cta.png") no-repeat transparent
        width 9px
        height 17px
        right 10px    
        
.gevalia__program
    .header__gevalia
        color $white
        +for_breakpoint(mobile)
            padding-top 2.9em
    .gevalia__section__content
        color $white
    .gevalia__list__info
        color $white
    .gevalia__section__content__large
        color $white
        
.gevalia__assistance
    .header__gevalia
        color $saddle
        +for_breakpoint(mobile)
            padding-top 3.5em
    .gevalia__section__content__large
        color $saddle
    .gevalia__list__info
        color $saddle
        
.gevalia__job
    .header__gevalia
        color $white
    .gevalia__section__content__large
        color $white
    .gevalia__list__info
        color $white
        
.gevalia__info__division__subfooter
    position relative
    .header__gevalia
        padding-top 0.6em
        color $white   
    .gevalia__social__tools
        right 3.2em
        position absolute
        bottom 5.2em
        +for_breakpoint(mobile)
            right 1em
            bottom 4.2em
        
.gevalia__social__tools
    .icon-item-social-gevalia
        color $white
        position relative
        font-size 3em
        margin-right 0.5em
        +for_breakpoint(mobile)
            font-size 70px

.social-tools
    transition all .2s ease-out
    display inline-block
    &:hover
        transform scale(1.3,1.3)